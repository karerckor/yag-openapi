{
  "name": "yag-openapi",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "build:clean": "pnpm run clean && pnpm run build",
    "test:watch": "turbo run test:watch",
    "dev:core": "pnpm --filter @yag-openapi/core dev",
    "dev:vite-plugin": "pnpm --filter @yag-openapi/vite-plugin dev",
    "build:core": "pnpm --filter @yag-openapi/core build",
    "build:vite-plugin": "pnpm --filter @yag-openapi/vite-plugin build"
  },
  "peerDependenciesMeta": {
    "@elysiajs/eden": {
      "optional": true
    },
    "hono": {
      "optional": true
    }
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
